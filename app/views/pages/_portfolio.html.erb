<section class="p-0 bg-dark" id="portfolio">
  <div class="container-fluid p-0">
    <div class="row no-gutters">
      <% @portfolios.each do |p| %>
        <div class="col-lg-4 col-sm-6 mx-auto sr-portfolio-<%= p.id.to_s %>">
            <%= link_to "#portfolioModal" + p.id.to_s, "data-toggle" => 'modal', class: "portfolio-box" do %>
            <%= image_tag "portfolio/thumbnails/" + p.thumb_image, class: "img-fluid" %>
            <div class="portfolio-box-caption">
              <div class="portfolio-box-caption-content">
                <div class="project-category text-faded">
                  <%= p.category %>
                </div>
                <div class="project-name">
                  <%= p.title %>
                </div>
              </div>
            </div>
            <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>