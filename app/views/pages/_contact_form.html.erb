<%= form_for @contact, url: pages_path, remote: true, html: {class: "col-lg-6 mx-auto sr-contact-1", id: "contact_form"} do |f| %>
        <div class="form-group">
            <%= f.text_field  :name, required: true, class: "form-control", placeholder: "Name" %>
        </div>
        <div class="form-group">
            <%= f.text_field :email, required: true, class: "form-control", placeholder: "Enter email" %>
        </div>
        <div class="form-group">
            <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "form-control", 
                placeholder: "Your message"%>
        </div>
        <div class="hidden">
            <%= f.label :nickname %>
            <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
        </div>
        <div>
            <div class="col-md-10 float-left" id="flash_message">
                <%= render 'contact_flash' %>
            </div>
            <%= f.submit "Submit", class: "btn btn-sm btn-primary float-right" %>
        </div>
<% end %>
