<section class="bg-green" id="majSkills">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-white">At Your Service</h2>
        <hr class="dark my-4">
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <% @major_skills.each do |s| %>
        <div class="col-lg-3 col-md-6 text-center">
          <div class="service-box mt-5 mx-auto">
            <%= icon('fas', s.icon, class: "fa-4x text-dark mb-3 sr-icon-1") %>
            <h3 class="mb-3 text-white"><%= s.title %></h3>
            <p class="text-light mb-0"><%= s.description %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<section class="bg-light" id="minSkills">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">At Your Service</h2>
        <hr class="my-4">
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <% @minor_skills.each do |s| %>
        <div class="col-lg-3 col-md-6 text-center">
          <div class="service-box mt-5 mx-auto">
            <%= icon('fas', s.icon, class: "fa-4x text-green mb-3 sr-icon-1") %>
            <h3 class="mb-3"><%= s.title %></h3>
            <p class="text-muted mb-0"><%= s.description %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>