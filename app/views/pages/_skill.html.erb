<section class="bg-green" id="majSkills">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-white text-uppercase sr-righttitle-1">Major Skills</h2>
        <hr class="dark my-4 sr-righttitle-2">
        <p class="section-heading text-light sr-righttitle-3">+4 Years of experience</p>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <% @skills.majskills.each do |s| %>
        <div class="col-lg-3 col-md-6 text-center">
          <div class="service-box mt-5 mx-auto">
            <%= icon("fas", s.icon, class: "fa-4x text-dark mb-3 sr-icon-" + s.id.to_s) %>
            <h3 class="mb-3 text-white"><%= s.title %></h3>
            <p class="text-light mb-0"><%= s.description %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<section class="bg-light" id="minSkills">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase sr-leftttitle-1">Minor Skills</h2>
        <hr class="my-4 sr-leftttitle-2">
        <p class="section-heading text-muted sr-leftttitle-3">~2 Years of experience</p>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <% @skills.minskills.each do |s| %>
        <div class="col-lg-3 col-md-6 text-center">
          <div class="service-box mt-5 mx-auto">
            <%= icon("fas", s.icon, class: "fa-4x text-green mb-3 sr-icon-" + s.id.to_s) %>
            <h3 class="mb-3"><%= s.title %></h3>
            <p class="text-muted mb-0"><%= s.description %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>